{
  "name": "telebot_constructor_frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "API_ORIGIN=http://localhost:8088 vite --port 8081",
    "build": "vite build",
    "watch": "vite build --watch",
    "preview": "vite build && vite preview",
    "check": "svelte-check --tsconfig tsconfig.json --compiler-warnings \"ts:ignore\"",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write --plugin prettier-plugin-svelte",
    "pydantic:to:ts": "poetry run python3 scripts/models/pydantic2jsonschema.py && node scripts/models/jsonschema2ts.mjs "
  },
  "devDependencies": {
    "@jhubbardsf/svelte-sortablejs": "^1.1.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@svelteuidev/composables": "^0.15.3",
    "@svelteuidev/core": "^0.15.3",
    "@tsconfig/svelte": "^5.0.0",
    "autoprefixer": "^10.4.16",
    "flowbite": "^2.2.1",
    "flowbite-svelte": "^0.44.23",
    "flowbite-svelte-icons": "^0.4.4",
    "js-md5": "^0.8.3",
    "json-schema-to-typescript": "^13.0.2",
    "postcss": "^8.4.32",
    "postcss-load-config": "^5.0.2",
    "prettier": "^3.0.2",
    "prettier-plugin-svelte": "^3.0.3",
    "svelte": "^4.2.0",
    "svelte-check": "^3.4.6",
    "svelte-routing": "^2.3.0",
    "svelte-select": "^5.7.0",
    "svelte-simple-modal": "^1.6.1",
    "svelvet": "npm:meetspur-svelvet@^8.1.1",
    "tailwindcss": "^3.3.6",
    "transliteration": "^2.3.5",
    "ts-essentials": "^9.4.0",
    "tslib": "^2.6.0",
    "typescript": "^5.0.2",
    "vite": "^5.1.1"
  },
  "prettier": {
    "printWidth": 120,
    "plugins": [
      "prettier-plugin-svelte"
    ]
  }
}
