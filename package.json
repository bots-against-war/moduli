{
  "name": "telebot_constructor_frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "cd frontend && API_ORIGIN=http://localhost:8088 vite --port 8081",
    "build": "cd frontend && vite build",
    "dev-landing": "cd landing && vite --port 8082",
    "dev-bawlanding": "cd baw-landing && vite --port 8083",
    "build-landing": "cd landing && vite build",
    "build-bawlanding": "cd baw-landing && vite build",
    "check": "svelte-check --tsconfig tsconfig.json --workspace frontend/ --compiler-warnings \"ts:ignore\"",
    "format": "prettier --write frontend",
    "pydantic:to:ts": "poetry run python3 scripts/models/pydantic2jsonschema.py && node scripts/models/jsonschema2ts.mjs"
  },
  "devDependencies": {
    "@jhubbardsf/svelte-sortablejs": "^1.1.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@svackages/truncate": "^1.0.0",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tsconfig/svelte": "^5.0.0",
    "autoprefixer": "^10.4.16",
    "flowbite": "^2.2.1",
    "flowbite-svelte": "^0.44.23",
    "flowbite-svelte-icons": "^1.6.1",
    "js-md5": "^0.8.3",
    "json-schema-to-typescript": "^13.0.2",
    "marked": "^14.1.0",
    "postcss": "^8.4.32",
    "postcss-load-config": "^5.0.2",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.0.3",
    "svelte": "^4.2.19",
    "svelte-check": "^3.6.4",
    "svelte-i18n": "^4.0.1",
    "svelte-routing": "^2.12.0",
    "svelte-select": "^5.7.0",
    "svelte-simple-modal": "^1.6.1",
    "svelvet": "npm:svelvet-against-war@^10.0.2-baw.5",
    "tailwindcss": "^3.3.6",
    "transliteration": "^2.3.5",
    "ts-essentials": "^9.4.0",
    "tslib": "^2.6.0",
    "types": "^0.1.1",
    "typescript": "^5.0.2",
    "vite": "^5.4.6"
  },
  "prettier": {
    "printWidth": 120,
    "plugins": [
      "prettier-plugin-svelte"
    ]
  }
}
