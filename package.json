{
  "name": "telebot_constructor_frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "API_ORIGIN=http://localhost:8088 vite --port 8081 frontend",
    "build": "vite build frontend",
    "watch": "vite watch frontend",
    "preview": "vite build frontend && vite preview frontend",
    "check": "svelte-check --tsconfig ./tsconfig.json --workspace frontend/",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --workspace frontend/ --watch",
    "format": "prettier --write --plugin prettier-plugin-svelte frontend"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^5.0.2",
    "@sveltejs/vite-plugin-svelte": "^2.4.2",
    "@svelteuidev/composables": "^0.14.0",
    "@svelteuidev/core": "^0.14.0",
    "@tsconfig/svelte": "^5.0.0",
    "json-schema-to-typescript": "^13.0.2",
    "prettier": "^3.0.2",
    "prettier-plugin-svelte": "^3.0.3",
    "svelte": "^4.0.5",
    "svelte-check": "^3.4.6",
    "svelte-routing": "^2.0.0",
    "svelte-simple-modal": "^1.6.1",
    "tslib": "^2.6.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "prettier": {
    "printWidth": 120,
    "plugins": [
      "prettier-plugin-svelte"
    ]
  }
}
